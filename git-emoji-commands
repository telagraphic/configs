# gexp	 	    "⚗️ EXPERIMENT: $@"


# Git Commit, Add all and Push — in one step.
function gcap() {
  git add . && git commit -m "$*" && git push
}

# FIRST COMMIT
function gfirst() {
  gcap "🎉 FIRST COMMIT: $@"
}

# NEW FEATURE
function gnew() {
  gcap "✨ NEW FEATURE: $@"
}

# REMOVE CODE OR FILES
function gremove() {
  gcap "🔥 REMOVED: $@"
}

# FIX
function gfix() {
  gcap "🛠️ FIX: $@"
}

# DATABASE WORK
function gdatabase() {
  gcap "🗂️ DATABASE: $@"
}

# IMPROVE
function gimp() {
  gcap "👌 IMPROVE: $@"
}

# WORK IN PROGRESS
function gwip() {
  gcap "🚧 IN PROGRESS: $@"
}

# DEPLOY
function gdeploy() {
  gcap "🚀 DEPLOY: $@"
}

# RESPONSIVE DESIGN
function gdesign() {
  gcap "📱 DESIGN: $@"
}

# CODE REFACTOR
function grefactor() {
  gcap "♻️ REFACTOR: $@"
}

# DOCUMENTATION
function gdoc() {
  gcap "📚 DOCUMENTATION: $@"
}

# PERFORMANCE
function gperformance() {
  gcap "⚡️ PERFORMANCE: $@"
}

# PROJECT STRUCTURE
function gstructure() {
  gcap "🗄️ PROJECT STRUCTURE: $@"
}

# EXPERIMENT
function gexp() {
  gcap "⚗️ EXPERIMENT: $@"
}
