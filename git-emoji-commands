# gfix 		    "🛠️ FIX: $@"
# gdatabase	  "🗂️ DATABASE: $@"
# gimp 		    "👌 IMPROVE: $@"
# gprogress 	"🚧 IN PROGRESS: $@"
# gdeploy	    "🚀 DEPLOY: $@"
